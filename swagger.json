{
  "swagger": "2.0",
  "info": {
    "description": "This is a sample geo server .",
    "title": "Address and Geocode API",
    "contact": {},
    "version": "1.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "paths": {
    "/api/address/search": {
      "post": {
        "description": "Search addresses by query string",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Search for addresses",
        "parameters": [
          {
            "description": "Search Query",
            "name": "query",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/main.SearchRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/main.ResponseAddress"
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "type": "string"
            }
          },
          "404": {
            "description": "No addresses found",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "main.SearchRequest": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string"
        }
      }
    },
    "main.ResponseAddress": {
      "type": "object",
      "properties": {
        "addresses": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/main.Address"
          }
        }
      }
    },
    "main.Address": {
      "type": "object",
      "properties": {
        "city": {
          "type": "string"
        },
        "house": {
          "type": "string"
        },
        "lat": {
          "type": "string"
        },
        "lon": {
          "type": "string"
        },
        "street": {
          "type": "string"
        }
      }
    }
  }
}
